extends layout

block content
	input(type="text" name="id" placeholder="Please enter your id")
	input(type="text" name="pw" placeholder="Please enter your pw")
	button(type="button") 로그인
	br
	br
	a(href="/new") 회원가입
	script.
		$('button').click(function(){
			var id = $('input[name="id"]').val();
			var pw = $('input[name="pw"]').val();
			$.post( "http://localhost:4000/login", { id: id, pw: pw } );
		});
